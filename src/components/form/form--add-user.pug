+modal("addUserForm", "Добавить пользователя")
	form(action='#')
		.mb-3
			label.form-label(for="userName") ФИО
			input#userName.form-control.form-control-lg(type="text")

		.mb-3
			label.form-label(for="userEmail") E-mail
			input#userEmail.form-control.form-control-lg(type="email")

		.mb-3
			label.form-label(for="userPassword") Пароль
			.form__password
				input#userPassword.form-control.form-control-lg(type="password" placeholder="Не менее 6-ти знаков")
				a.form__password-toggle.pass-toggle--js(href="#")
					+icon("eye")

		.mb-3
			label.form-label(for="userPassword2") Подтвердите пароль
			.form__password
				input#userPassword2.form-control.form-control-lg(type="password" placeholder="Не менее 6-ти знаков")
				a.form__password-toggle.pass-toggle--js(href="#")
					+icon("eye")

		.mb-3
			label.form-label(for="userDesc") Краткое описание
			textarea#userDesc.form-control.form-control-lg

		button.btn.btn-primary.btn-lg.w-100(type="submit") Сохранить


