mixin modal(id, title, content, footer)
	.modal.fade.shadow(
		id= id
		tabindex="-1"
	)
		.modal-dialog.modal-dialog-centered
			.modal-content
				.modal-header.px-20
					h5.modal-title= title
					button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")

				if (content)
					.modal-body.px-20.fz-14= content

				if (footer)
					.modal-footer.px-20.text-center
						button.btn.btn-danger(type="button") Да
						button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Отмена

