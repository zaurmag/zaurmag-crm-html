.card.shadow-sm-soft.mb-30
	header.card-header
		.row.align-items-center
			.col-xxl.mb-0.mb-xl-2.mb-xxl-0.d-flex.align-items-center.justify-content-between
				.d-flex.align-items-center
					h5.h6.mb-0.card-header-title Проекты
					p.text-secondary.ms-3.m-0 Отмечено: 5
					button.btn.btn-outline-danger.btn-sm.ms-2(type="button")
						+icon("trash")
						span.ms-1.d-none.d-lg-inline Удалить

				button.btn.btn-light.fz-18.p-2.d-xl-none(type="button" data-bs-toggle="collapse" data-bs-target="#filter" aria-expanded="false")
					+icon("filter")

			#filter.col-xxl-auto.collapse.d-xl-block
				include ../form/form--filter

	.table-responsive
		table.table.align-middle.table-borderless.card-table.mb-0.table-nowrap
			thead.table-light
				tr
					th.table-cell-check
						.form-check
							input.form-check-input.float-none(type="checkbox" value="")

					th #
					th Наименование
					th Дата
					th.no-wrap Описание
					th Тип операции
					th Сумма
					th Действие

			tbody
				- var i = 1
				while i <= 5
					tr
						td
							.form-check
								input.form-check-input.float-none(type="checkbox" value="")
						td= i
						td(style="min-width: 215px")
							a.table-cell-title-link.is-transition(href="/page.html") Гасан lakia3d.ru
						td 02.06.20221
						td(style="min-width: 380px") Продление сайта lakia3d.ru Lorem ipsum dolor sit amet, consectetur adipisicing elit. Nobis, tempore.
						td
							if (i > 2 && i < 6)
								span.indicator.bg-success.me-2
								| Приход
							else
								span.indicator.bg-danger.me-2
								| Расход
						td 3300 ₽
						td(style="min-width: 140px")
							button.btn.btn-outline-primary.btn-sm.py-1.fz-12(type="button") Открыть
							button.btn.text-danger.ms-1.fz-16.p-1(type="button" data-bs-toggle="tooltip" data-bs-title="Удалить")
								+icon("trash")
					- i++

	footer.card-footer
		//- Pagination
		include ../pagination/pagination
