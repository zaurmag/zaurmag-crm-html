.card.shadow-sm.card__report
	header.card-header
		h5.card-header-title.h6.mb-0 Отчеты

	.card-body
		h2.h3 25 000 руб.

		.progress.rounded-pill.mb-2.opacity-75.fz-10(style="height: 10px")
			.progress-bar.bg-success(style="width: 25%" data-bs-toggle="tooltip" title="Приход" data-placement="top") 25%
			.progress-bar.bg-danger(style="width: 20%" data-bs-toggle="tooltip" title="Расход" data-placement="top") 20%
			.progress-bar.bg-warning(style="width: 10%" data-bs-toggle="tooltip" title="В ожидании" data-placement="top") 10%


		.table-responsive.mt-30
			table.table.table-nowrap.card-table
				tbody
					tr
						th(scope="row")
							span.indikator.bg-success.me-2
							| Приход
						td 15 000 руб.
						td
							.badge.bg-info.opacity-75 + 12%

					tr
						th(scope="row")
							span.indikator.bg-danger.me-2
							| Расход
						td 15 000 руб.
						td
							.badge.bg-info.opacity-75 - 5%

					tr
						th(scope="row")
							span.indikator.bg-warning.me-2
							| В ожидании
						td 7 000 руб.
						td
							.badge.bg-warning.opacity-75 - 5%
