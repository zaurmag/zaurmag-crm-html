extends ./base/empty

append variables
	- var title = 'Авторизация'

block main
	.row.justify-content-center
		.col-md-5
			.card.shadow-sm
				header.card-header.text-center
					h1.h3.mb-0 Авторизация

				.card-body.p-lg-30
					form(action="#")
						.mb-3
							label.form-label(for="email") E-mail
							input#email.form-control.form-control-lg(type="email" placeholder="email@address.com")

						.mb-3
							label.form-label(for="password") Пароль
							.form__password
								input#password.form-control.form-control-lg(type="password" placeholder="Не менее 6-ти знаков")
								a.form__password-toggle.pass-toggle--js(href="#")
									+icon("eye")


						button.btn.btn-primary.btn-lg.w-100(type="submit") Войти

					.text-secondary.fz-14.mt-4.text-center
						a.text-decoration-none(href="/sign-up.html") Зарегистрируйтесь
						| ,
						| если у вас нет еще учетной записи.

