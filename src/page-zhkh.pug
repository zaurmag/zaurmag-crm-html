extends ./base/base

append variables
	- var title = '9 октября 2022 г.'

block main
	//- Page header
	header.main__header.d-block
		.row.align-items-center.g-20
			.col-sm.d-flex.align-items-center
				h1.h3.main__header-tlt= title
				.ms-3.d-none.d-sm-block.text-nowrap
					span.indicator.indicator--lg.bg-success.me-10
					span.fz-16 Оплачено

			.col-sm-auto.d-flex.align-items-center.justify-content-between
				.me-3.d-sm-none
					span.indicator.indicator--lg.bg-success.me-10
					span.fz-16 Оплачено

				.d-flex.align-items-center
					button.btn.btn-primary.px-3(
						type="button"
						data-bs-toggle="modal"
						data-bs-target="#addRecordForm"
					)
						+icon("pencil-square")
						span.ms-1.d-lg-inline.d-none Редактировать

					button.btn.btn-outline-danger.px-3.ms-10(
						type="button"
						data-bs-toggle="modal"
						data-bs-target="#confirm"
					)
						+icon("trash")
						span.ms-1.d-none.d-lg-inline Удалить

					button.btn.btn-outline-secondary.ms-10.px-3(
						type="button"
						data-bs-toggle="modal"
						data-bs-target="#zhkhSettingForm"
					)
						+icon("gear").fz-16
						span.ms-1.d-none.d-lg-inline Тарифы

	.row.justify-content-center
		.col-xxl-10
			.card.shadow-sm-soft
				.card-body.p-sm-30
					h2.h4.mb-xxl-30 Сумма: 3 500 ₽
					.row.g-20.mb-30
						.col-xl-3.col-sm-6
							.card.card--green.h-100
								.card-body.p-25
									h3.card-subtitle Электричество, квт/ч
									p Предыдущие: #[span.fz-16 1 400]
									p Текущие: #[span.fz-16 1 500]
									p Разница: #[span.fz-16 100]
									p.m-0 Сумма: #[span.fw-medium.fz-16 1 500 ₽]

						.col-xl-3.col-sm-6
							.card.card--yellow.h-100
								.card-body.p-25
									h3.card-subtitle Газ, м#[sup 3]
									p Предыдущие: #[span.fz-16 1 800]
									p Текущие: #[span.fz-16 1 900]
									p Разница: #[span.fz-16 100]
									p.m-0 Сумма: #[span.fw-medium.fz-16 2 000 ₽]

						.col-xl-3.col-sm-6
							.card.card--blue.h-100
								.card-body.p-25
									h3.card-subtitle Вода, м#[sup 3]
									p Предыдущие: #[span.fz-16 600]
									p Текущие: #[span.fz-16 665]
									p Разница: #[span.fz-16 15]
									p.m-0 Сумма: #[span.fw-medium.fz-16 300 ₽]

						.col-xl-3.col-sm-6
							.card.card--gray.h-100
								.card-body.p-25
									h3.card-subtitle Мусор
									p Количество человек: #[span.fz-16 6]
									p.m-0 Сумма: #[span.fw-medium.fz-16 400 ₽]

					//- Description cols
					.row
						.col-sm
							p #[strong Описание]
							p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Amet atque commodi corporis dicta doloribus ea error hic ipsam labore laboriosam libero molestiae nesciunt, placeat quae quia quod reprehenderit sed voluptatum.

						.col-sm
							p #[strong Фото квитанции]
							button.btn.btn-empty.p-0(type="button" data-bs-toggle="modal" data-bs-target="#openModalImage")
								img.img-fluid(src="./images/foto-zhkh.jpg" alt="Фото квитанции ЖКХ")

append endBody
	include ./components/form/form--add-zhkh
	include ./components/form/form--zhkh-settings

	//- Modal image
	+modal('openModalImage').modal-xl.modal--empty
		img.img-fluid.w-100(src="./images/foto-zhkh.jpg" alt="Фото квитанции ЖКХ")

	//- Confirm
	+modal('confirm', 'Вы действительно хотите удалить?', 'Данную операцию отменить будет не возможно!', true)
